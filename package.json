{
  "name": "@paywaz/sdk",
  "version": "0.1.0",
  "description": "Paywaz JavaScript SDK â€” the developer gateway into zero-fee, crypto-native payments.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hellopaywaz/paywaz-sdk-js.git"
  },
  "bugs": {
    "url": "https://github.com/hellopaywaz/paywaz-sdk-js/issues"
  },
  "homepage": "https://github.com/hellopaywaz/paywaz-sdk-js#readme",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist", "README.md", "LICENSE", "paywaz-license"],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf dist src/generated",
    "generate": "openapi-generator-cli generate -i openapi/openapi.yaml -g typescript-fetch -o src/generated --additional-properties=supportsES6=true,typescriptThreePlus=true",
    "build": "npm run generate && tsc -p tsconfig.json",
    "lint": "eslint \"src/**/*.ts\" --max-warnings=0",
    "test": "npm run build",
    "docs": "typedoc",
    "release": "changeset publish --provenance",
    "release:beta": "npm run build && changeset publish --tag beta",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@openapitools/openapi-generator-cli": "^2.7.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.2",
    "ts-node": "^10.9.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0"
  }
}
